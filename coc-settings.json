{
    "explorer.icon.enableNerdfont": true,
    "explorer.file.showHiddenFiles": true,
    "explorer.keyMappings.global": {
        "<space>": "toggleSelection",
        "v": "open:vsplit:intelligent"
    },
    "clangd.semanticHighlighting": true,
    "clangd.arguments": ["-cross-file-rename"],
    "clangd.fallbackFlags": ["-std=c++2a"],
    "coc.preferences.formatOnSaveFiletypes": ["cpp", "python", "cmake", "rust"],
    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "~/.local/bin/yapf",
    "python.pythonPath": "/usr/bin/python3",
    "suggest.noselect": false,
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/snippets"
    ],
    "list.source.files.args": ["--hidden", "--files"],
    "session.saveOnVimLeave": false,
    "git.addGBlameToVirtualText": true,
    "cSpell.userWords": [
      "Biot",
      "Biot's",
      "Raphson",
      "Terzaghi",
      "Terzaghi's",
      "cmake",
      "discretized",
      "dofs",
      "elastoplastic",
      "geomechanical",
      "linearization",
      "numpy",
      "poroelastic",
      "poroelasticity",
      "poromechanical"
    ],
    "cSpell.enabledLanguageIds": [
        "vim",
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "tex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "python",
        "pug",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "cSpell.ignoreRegExpList": [
      "\\\\\\w*(\\[.*?\\])?(\\{.*?\\})?",
      "\\$.+?\\$"
    ]
}
